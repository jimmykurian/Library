<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Publication date</th>
    <th>Length in pages</th>
    <th>Language</th>
    <th>Amount of Authors</th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.publication_date %></td>
    <td><%= book.length_in_pages %></td>
    <td><%= book.language %></td>
    <td><%= book.authors.count %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

